<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/dk.escteam.keyboardextender.client">
 

    <android.support.v7.widget.GridLayout
        android:id="@+id/mathnum_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:text="log"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:text="sin"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:text="cos"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:text="tan"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="4"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:text="pi"
            android:textSize="20sp" />
        
        
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_xpoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:text="x^y"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_sqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:text="sqrt"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_xpot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:text="x^2"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_procent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:text="%"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_verticalbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="4"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:text="|"
            android:textSize="20sp" />
        
        
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:text="7"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:text="8"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:text="9"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_parent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:text="("
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_parent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="4"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:text=")"
            android:textSize="20sp" />
        
        
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:text="4"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:text="5"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:text="6"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_asterisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:text="*"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_forwarddash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="4"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:text="/"
            android:textSize="20sp" />
        
        
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="4"
            android:text="1"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="4"
            android:text="2"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="4"
            android:text="3"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_gravity="left|top"
            app:layout_row="4"
            android:text="+"
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="4"
            app:layout_gravity="left|top"
            app:layout_row="4"
            android:text="-"
            android:textSize="20sp" />
        
        
        
        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="5"
            android:text="0"
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="5"
            android:text=","
            android:textSize="20sp" />

        <dk.escteam.keyboardextender.client.view.ButtonView
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="5"
            android:text="."
            android:textSize="20sp" />
        
        <dk.escteam.keyboardextender.client.view.ImgButtonView
            android:id="@+id/button_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_columnSpan="2"
            app:layout_gravity="left|top"
            app:layout_row="5"
            android:src="@drawable/navigation_enter"/>
        
    </android.support.v7.widget.GridLayout>

</LinearLayout>